@using HaberPortal.Entity;
@model List<Haber>

@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    

<div class="container" style=" max-width:960px;">
    <div class="row">
        <div class="col-12">


            <div id="carouselSonDakika" class="carousel slide" data-ride="carousel" style="height:340px">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carouselSonDakika" data-slide-to=@i class="active"></li>

                        }
                        else
                        {
                            <li data-target="#carouselSonDakika" data-slide-to=@i></li>
                        }
                    }
                </ol>

                <div class="carousel-inner">
                    @for (int j = 0; j < Model.Count; j++)
                    {
                        if (j == 0)
                        {
                            <div class="carousel-item active">
                                <a href="/Anasayfa/HaberDetay/@Model[j].id" style="color:black;" />
                                <img src=@Model[j].resim_yolu class="d-block w-100 img-fluid " alt="..." style="width:806px; height:378px;">

                            </div>

                        }
                        else
                        {
                            <div class="carousel-item">
                                <a href="/Anasayfa/HaberDetay/@Model[j].id" style="color:black;" />
                                <img src=@Model[j].resim_yolu class="d-block w-100 img-fluid" alt="..." style="width:806px; height:378px;">
                            </div>


                        }
                    }
                </div>

                <a class="carousel-control-prev" href="#carouselSonDakika" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselSonDakika" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

        <div class="col-12 justify-content-center w-100" style="margin-top:100px; height:70px;">
            <img src="https://i.hizliresim.com/0DWQs7.jpg" class="img-fluid" />
        </div>

        <div class="col12 justify-content-center w-100" style="min-width:initial; max-width:960px;">
            <div class="row justify-content-center" style="">
                <div class="col-12 col-md-6 " style=" margin-top:40px;  max-width:450px; position:relative;">
                    @{Html.RenderAction("MagazinCarouselGetir");}
                </div>
                <div class="col-12 col-md-6 " style="margin-top:15px; max-width:450px; position:relative;">
                    @{Html.RenderAction("SporCarouselGetir");}
                </div>

            </div>
        </div>
        <div class="row" style="margin-top:50px; width:auto;">
            @{Html.RenderAction("Son20HaberGetir");}
        </div>


    </div>





      
        
    </div>
