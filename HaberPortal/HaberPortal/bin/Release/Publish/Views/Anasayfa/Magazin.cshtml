@using HaberPortal.Entity;
@model List<Haber>
@{
    ViewBag.Title = "Magazin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;">Magazin Haberleri</h2>
<div class="row">

    <div class="col-2" style="float:left;"></div>
    <div class="col-8">
        <div class="row">
            @foreach (var haber in Model)
            {
                <div class="card col-12 col-md-6 col-lg-4 card-div-hover" style="width: 18rem; margin-top:5px; padding-top:5px;">
                    <a href="/Anasayfa/HaberDetay/@haber.id" style="color:black; text-decoration:none;">
                        <img src=@haber.resim_yolu class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@haber.baslik.Replace(":", "").Substring(0, 40) ...</h5>
                            <p class="card-text">@haber.icerik.Substring(0, 100) ...</p>
                        </div>
                </div>
            }
        </div>
    </div>
    <div class="col-2" style="float:right;"></div>

</div>


