@using HaberPortal.Entity;
@model List<Haber>

@{
    Layout = null;
}

<div id="carouselMagazin" class="carousel slide justify-content-center " data-ride="carousel" style="max-width:400px; height:350px;">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i == 0)
            {

                <li data-target="#carouselMagazin" data-slide-to=@i class="active"></li>

            }
            else
            {

                <li data-target="#carouselMagazin" data-slide-to=@i></li>
            }
        }
    </ol>

    <div class="carousel-inner">
        @for (int j = 0; j < Model.Count; j++)
        {
            if (j == 0)
            {
                <div class="carousel-item active">

                    <a href="/Anasayfa/HaberDetay/@Model[j].id" style="color:black;" />
                    <img src=@Model[j].resim_yolu class="d-block w-100 img-fluid" alt="..." style="width:450px; height:350px;">

                </div>

            }
            else
            {
                <div class="carousel-item">
                    <a href="/Anasayfa/HaberDetay/@Model[j].id" style="color:black;" />
                    <img src=@Model[j].resim_yolu class="d-block w-100 img-fluid" alt="..." style="width:450px; height:350px;">
                </div>


            }
        }
    </div>

    <a class="carousel-control-prev" href="#carouselMagazin" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselMagazin" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>